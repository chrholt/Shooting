<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shooting.Figurjakt"
             Title="Figurjakt">
    <ScrollView HorizontalOptions="FillAndExpand">
        <Label Text="This is Figurjakt page!" />
        <StackLayout Margin="10,30,10,20">
            <StackLayout Orientation="Horizontal">
                <DatePicker Format="dd/MM/yyyy"></DatePicker>
                <Entry Placeholder="StevneID"></Entry>
                <Entry Placeholder="Name"></Entry>
            </StackLayout>
            <StackLayout>
                <Label Text="{Binding Source={x:Reference slider}, Path=Value, StringFormat='{0:F0} Posts'}" />
                <Slider Maximum="20" Minimum="1" x:Name="slider" ValueChanged="figurjaktSlider_ValueChanged" />
            </StackLayout>
            <StackLayout x:Name="figurjaktPosts" HorizontalOptions="FillAndExpand">
