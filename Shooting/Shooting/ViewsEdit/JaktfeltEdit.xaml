                           Grid.RowSpan="2" 
                           VerticalOptions="Center"/>

                        <Label Text="Treff"  
                           Grid.Column="1" 
                           Grid.Row="9"/>
                        <Entry x:Name="post4Hits" 
                           Grid.Column="1" 
                           Grid.Row="10"
                           Keyboard="Numeric"
                               Text="{Binding JaktfeltPost4.Hits}">
                        </Entry>
                        <Label x:Name="post4HitsErrorLabel" 
                       FontSize="Micro" 
                       IsVisible="false" 
                       TextColor="Red" 
                       Text="Maksimum verdi = 5"
                       Grid.Row="11"
                       Grid.Column="1"/>

                        <Label Text="Innertreff" 
                           Grid.Column="2" 
                           Grid.Row="9"/>
                        <Entry x:Name="post4InnerHits" 
                           Grid.Column="2" 
                           Grid.Row="10"
                           Keyboard="Numeric"
                               Text="{Binding JaktfeltPost4.InnerHits}">
                        </Entry>
                        <Label x:Name="post4InnerHitsErrorLabel" 
                       FontSize="Micro" 
