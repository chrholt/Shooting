                       Text="Maksimum verdi = 5"
                       Grid.Row="14"
                       Grid.Column="2"/>
                        <!-- END POST 5 -->
                        <!-- POST 6 -->
                        <Label Text="{Binding JaktfeltPost6.PostName}" 
                           TextColor="Black" 
                           Grid.Column="0" 
                           Grid.Row="15" 
                           Grid.RowSpan="2" 
                           VerticalOptions="Center"/>

                        <Label Text="Treff"  
                           Grid.Column="1" 
                           Grid.Row="15"/>
                        <Entry x:Name="post6Hits" 
                           Grid.Column="1" 
                           Grid.Row="16"
                           Keyboard="Numeric"
                               Text="{Binding JaktfeltPost6.Hits}">
                        </Entry>
                        <Label x:Name="post6HitsErrorLabel" 
                       FontSize="Micro" 
                       IsVisible="false" 
                       TextColor="Red" 
                       Text="Maksimum verdi = 5"
                       Grid.Row="17"
                       Grid.Column="1"/>

                        <Label Text="Innertreff" 
                           Grid.Column="2" 
                           Grid.Row="15"/>
                        <Entry x:Name="post6InnerHits" 
                           Grid.Column="2" 
                           Grid.Row="16"
                           Keyboard="Numeric"
                               Text="{Binding JaktfeltPost6.InnerHits}">
                        </Entry>
                        <Label x:Name="post6InnerHitsErrorLabel" 
                       FontSize="Micro" 
                       IsVisible="false" 
                       TextColor="Red" 
                       Text="Maksimum verdi = 5"
                       Grid.Row="17"
                       Grid.Column="2"/>
                        <!-- END POST 6 -->
                    </Grid>
                </Frame>



            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>